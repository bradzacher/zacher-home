{% from "./html/macros/social.njk" import social %}
<!doctype html>
<html lang="en">
{% set host = "https://zacher.com.au" %}
{% set gravatarUrl = "https://en.gravatar.com/userimage/88111926/67c389d0ebb48c35829460f965f820a9.png?size=200" %}
{% set tagline = "Computer scientist. Cider drinker. Motorcyclist." %}
<head>
  <meta charset="utf-8">

  <title>Brad Zacher</title>

  <link rel="manifest" href="./manifest.webmanifest" />
  <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1" />
  <meta name="description" content="{{ tagline }}" />
  <meta name="keywords" content="Brad Zacher,Computer Science,Comp Scip,Software Engineer,Applications Development,Apps Dev,JavaScript,JS,C#,TS" />
  <meta name="robots" content="index,follow" />
  <meta name="theme-color" content="#56BA89" />
  <meta name="msapplication-navbutton-color" content="#56BA89">
  <meta name="apple-mobile-web-app-status-bar-style" content="black">
  <meta name="mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <link rel="canonical" href="{{ host }}" hreflang="en" />

  <meta name="google-site-verification" content="vy-3FkApFAwwUzQ82kIoUrl5ArQmGL8Ut_yCNhi_Aqk" />

  <!-- OpenGraph meta tags -->
  <meta property="og:title" content="Brad Zacher" />
  <meta property="og:type" content="profile" />
  <meta property="og:image" content="{{ gravatarUrl }}" />
  <meta property="og:image:width" content="200" />
  <meta property="og:image:height" content="200" />
  <meta property="og:url" content="{{ host }}" />
  <meta property="og:description" content="{{ tagline }}" />
  <meta property="fb:profile_id" content="783668769" />
  <meta property="fb:admins" content="783668769" />

  <!-- Twiter meta tags -->
  <meta name="twitter:card" content="summary" />
  <meta name="twitter:site" content="@bradzacher" />
  <meta name="twitter:title" content="Brad Zacher" />
  <meta name="twitter:description" content="{{ tagline }}" />
  <meta name="twitter:image" content="{{ gravatarUrl }}" />

  <!-- TODO - parcel bugs out with sass -> css imports -->
  <link rel="stylesheet" href="../node_modules/material-design-lite/dist/material.indigo-pink.min.css" />
  <link rel="stylesheet" href="../node_modules/material-design-icons/iconfont/material-icons.css" />
  <link rel="stylesheet" href="../node_modules/github-calendar/dist/github-calendar-responsive.css" />

  <link rel="stylesheet" href="./styles.scss" />

  <script type="application/ld+json">
    {
        "@context": "http://schema.org",
        "@type": "Person",
        "alumniOf": {
            "@type": "Organization",
            "name": "University of Adelaide"
        },
        "birthDate": "1991-01-22",
        "description": "{{ tagline }}",
        "email": "brad.zacher@gmail.com",
        "familyName": "Zacher",
        "gender": {
            "@type": "GenderType",
            "name": "Male"
        },
        "givenName": "Brad",
        "homeLocation": {
            "@type": "Place",
            "name": "Adelaide"
        },
        "honorificPrefix": "Mr.",
        "image": "{{ gravatarUrl }}",
        "jobTitle": "Software Engineer",
        "knowsAbout": [
            "TypeScript",
            "JavaScript",
            "React",
            "GraphQL",
            "Node",
            "SQL",
            "C#",
            "PHP",
            "HTML",
            "CSS"
        ],
        "knowsLanguage": [
            {
                "@type": "Language",
                "name": "English"
            }
        ],
        "name": "Brad Zacher",
        "nationality": {
            "@type": "Country",
            "name": "Australia"
        },
        "sameAs": [
            {% for link in social %}
                "{{ link.link }}"
                {% if not loop.last %},{% endif %}
            {% endfor %}
        ],
        "url": "{{ host }}",
        "workLocation": {
            "@type": "Place",
            "name": "Sydney"
        },
        "worksFor": {
            "@type": "Organization",
            "name": "Facebook"
        }
    }
  </script>
</head>

<body>
  <!-- Always shows a header, even in smaller screens. -->
  <div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
    <header class="mdl-layout__header">
      <div class="mdl-layout__header-row">
        <!-- Title -->
        <span class="mdl-layout-title">Brad Zacher</span>
        <!-- Add spacer, to align navigation to the right -->
        <div class="mdl-layout-spacer"></div>
        <!-- Navigation -->
        <nav class="mdl-navigation">
          <a class="mdl-navigation__link" href="https://medium.com/@bradzacher" rel="me">Blog</a>
          <a class="mdl-navigation__link" href="https://github.com/bradzacher" rel="me">Github</a>
          <a class="mdl-navigation__link" href="https://twitter.com/bradzacher" rel="me">Twitter</a>
        </nav>
      </div>
    </header>
    <main class="mdl-layout__content">
      <div class="page-content">
        {% include "./html/about.njk" %}
        {% include "./html/links.njk" %}
        {% include "./html/wakatime.njk" %}
        {% include "./html/github.njk" %}
        {% include "./html/opensource.njk" %}
        {% include "./html/projects.njk" %}
      </div>
    </main>
  </div>

  <script type="text/javascript" src="./app/index.ts"></script>
  <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-44247259-1', 'auto');
    ga('send', 'pageview');
  </script>
</body>

</html>
