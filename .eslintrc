{
    "extends": [
        "assignar-react"
    ],
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "typescript/type-annotation-spacing": [
            "error",
            {
                "before": true,
                "after": true
            }
        ],
        "react/prop-types": "off",
        "react/no-array-index-key": "warning",
        "react/jsx-no-target-blank": "off",
        "react/jsx-one-expression-per-line": "off",
        "react/jsx-wrap-multilines": "off",
        "import/no-nodejs-modules": "off"
    },
    "settings": {
        "import/resolver": {
            "typescript": {}
        },
        "react": {
            "version": "16.6.3"
        }
    },
    "overrides": [
        {
            "files": "typings/**/*",
            "rules": {
                "strict": "off"
            }
        },
        {
            "files": "scripts/**/*",
            "rules": {
                "import/no-nodejs-modules": "off"
            }
        }
    ]
}
