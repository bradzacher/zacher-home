{
    "extends": [
        "assignar-node"
    ],
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "typescript/type-annotation-spacing": [
            "error",
            {
                "before": true,
                "after": true
            }
        ]
    },
    "settings": {
        "import/resolver": {
            "typescript": {}
        }
    },
    "overrides": [
        {
            "files": "typings/**/*",
            "rules": {
                "strict": "off"
            }
        }
    ]
}
